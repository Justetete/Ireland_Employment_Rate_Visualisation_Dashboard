{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/Justetete/COMP40610_Information_Visualisation_Assignment/refs/heads/main/data_cleaning/combined_clean_data.csv?token=GHSAT0AAAAAADKLU4TX6SNDQXIV3YJ4VDWC2ICBBWQ",
        "format": {"type": "csv"}
    },
    "transform": [
        {"filter": "datum.Year = 2024"},
        {"filter": {"field": "Statistic Label", "equal":"Employment Rate"}},
        {"filter": {"field": "Statistic Label", "equal":"Unemployment Rate"}}
    ],
    "repeat": {"column": ["Age Group", "Education Attainment Level", "NUTS 2 Region"]},
    "spec":{
        "mark": "bar",
        "encoding": {
            "x": {
                "field":{"repeat": "column"},
                "type": "nominal"
            },
            "y": {
                "field": "Value",
                "type": "quantitative"
            },
            "color": {
                "field": "Sex",
                "type": "nominal"
            }
        }
    }

}