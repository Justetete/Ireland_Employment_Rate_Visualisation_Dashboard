{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/Justetete/COMP40610_Information_Visualisation_Assignment/refs/heads/main/raw_datasets/ALF02_Annual%20Percentage%20of%20Part-time%20Work.csv",
        "format": {"type": "csv"}
    },
    "transform": [
        {"filter": "datum['Education Attainment Level'] == 'Levels of Education (Levels  0-8)'"},
        {"filter": "datum['Year'] == '2024'"},
        {"filter": "datum['Age Group'] != 'All ages'"}
    ],
    "width": 600,
    "height": 400,
    "title": "Percentage of part-time in different age group grouped by gender in 2024 ",
    "mark": "bar",
    "encoding": {
        "x": {
            "field": "Age Group",
            "type": "nominal",
            "title": "Age Group"
        },
        "y": {
            "field": "VALUE",
            "type": "quantitative",
            "title": "Percentage of Part-time(%)",
            "scale": {"domain": [0, 60]}
        },
        "xOffset": {
            "field": "Sex"
        },
        "color": {
            "field": "Sex",
            "type": "nominal",
            "legend": {"orient": "top-right"}
        }
    }
}