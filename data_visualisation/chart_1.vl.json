{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/Justetete/COMP40610_Information_Visualisation_Assignment/refs/heads/main/data_cleaning/combined_clean_data.csv",
        "format": {"type": "csv"}
    },
    "transform": [
        {"filter": "datum.Year == 2024"},
        {"filter": {"field": "Statistic Label", "equal": "Employment Rate"}}
    ],
    "repeat": {"column": ["Age Group", "Education Attainment Level", "NUTS 2 Region"]},
    "spec":{
        "mark": "bar",
        "encoding": {
            "x": {
                "field":{"repeat": "column"},
                "type": "nominal"
            },
            "y": {
                "field": "VALUE",
                "type": "quantitative",
                "title": "Percentage (%)"
            },
            "xOffset": {
                "field": "Statistic Label"
            },
            "color": {
                "field": "Statistic Label",
                "type": "nominal",
                "title": "Metric"
            }
        }
    }

}